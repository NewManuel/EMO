<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include Bootstrap CSS and JS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Update the path to your JS file in the public folder -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        body {
            text-align: center;
        }

        h1, h3 {
            margin-top: 20px;
        }

        .carousel-item {
            text-align: center;
        }

        .carousel-item img {
            width: 150px; /* Set the width to a specific value */
            height: 150px; /* Set the height to a specific value */
            display: block;
            margin: 0 auto;
            border: 1px solid #ddd; /* Add a border around the image */
            border-radius: 5px; /* Optional: Add rounded corners */
            padding: 5px; /* Optional: Add some padding */
        }

        .carousel-caption {
            margin-top: 10px; /* Add margin between image and text */
            position: static; /* Set position to static for text to appear below */
        }

        /* Custom arrow styling */
        .carousel-control-prev, .carousel-control-next {
            width: 5%;
            background: none;
        }

        .carousel-control-prev-icon, .carousel-control-next-icon {
            background-color: rgba(62, 254, 179, 0.8);
            border-radius: 50%;
            color: rgb(63, 45, 228);
            font-size: 24px;
        }
    </style>

    <link rel="icon" type="image/x-icon" href="images/emo_logo.png">
</head>
<body>
    <div class="container">
        <h1>How do you want your face to look?</h1>
        
        <!-- Carousel Selector -->
        <div id="emotionSelector" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <!-- Emotion 1 -->
                <div class="carousel-item active">
                    <a href="/music?emotion=intense">
                        <img src="images/angry_emoji.png" class="d-block" alt="Intense">
                        <div class="carousel-caption">
                            <h5>Intense</h5>
                            <p>Let it out</p>
                        </div>
                    </a>
                </div>
                <!-- Emotion 2 -->
                <div class="carousel-item">
                    <a href="/music?emotion=upbeat">
                        <img src="images/upbeat_emoji.png" class="d-block" alt="Upbeat">
                        <div class="carousel-caption">
                            <h5>Upbeat</h5>
                            <p>Good vibes only</p>
                        </div>
                    </a>
                </div>
                <!-- Emotion 3 -->
                <div class="carousel-item">
                    <a href="/music?emotion=romantic">
                        <img src="images/romance_emoji.png" class="d-block" alt="Romantic">
                        <div class="carousel-caption">
                            <h5>Romantic</h5>
                            <p>For that special someone</p>
                        </div>
                    </a>
                </div>
                <!-- Emotion 4 -->
                <div class="carousel-item">
                    <a href="/music?emotion=chill">
                        <img src="images/chill_emoji.png" class="d-block" alt="Chill">
                        <div class="carousel-caption">
                            <h5>Chill</h5>
                            <p>tunes to unwind to</p>
                        </div>
                    </a>
                </div>
                <!-- Emotion 5 -->
                <div class="carousel-item">
                    <a href="/music?emotion=sad">
                        <img src="images/sad_emoji.png" class="d-block" alt="Sad">
                        <div class="carousel-caption">
                            <h5>Sad</h5>
                            <p>melancholy melodies</p>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Custom arrows -->
            <a class="carousel-control-prev" href="#emotionSelector" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#emotionSelector" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <script>
            // Enable the carousel to show all items at once
            $('#emotionSelector').carousel({
                interval: false
            });
        </script>
    </div>
</body>
</html>
